<article itemscope itemprop="blogPost">
  <div>
    <% if (page.link || page.title){ %>
    <header>
      <h1 itemprop="name">
        <%= page.title %>
      </h1>
      <div class="post-meta">
        <time datetime="<%= date_xml(page.date) %>" itemprop="datePublished"><%= date(page.date) %></time>
        <div>
          <a href="/" style="margin-right: .8em;">首页</a>
          <a href="/archives">归档</a>
        </div>
      </div>
    </header>
    <hr />
    <% } %>
    <div itemprop="articleBody" class="articleBody">
      <%- page.content %>
    </div>
  </div>
</article>

<% if (theme.disqus){ %>
  <div id="disqus_thread" style="margin-top: 30px;"></div>
